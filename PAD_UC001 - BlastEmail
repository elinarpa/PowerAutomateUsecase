# Copy and paste the lines below in PAD to see the flow


System.TerminateProcess.TerminateProcessByName ProcessName: $'''EXCEL'''
# Read Config
SET SelectedFile TO $'''C:\\Users\\Ideapad Gaming\\Documents\\UC001 - BlastMarketingEmail\\000_Config.xlsx'''
SET Config TO {{ }}
Excel.LaunchExcel.LaunchAndOpenUnderExistingProcess Path: SelectedFile Visible: False ReadOnly: False Instance=> ConfigExcelInstance
Excel.GetAllWorksheets Instance: ConfigExcelInstance Worksheets=> SheetNames
LOOP FOREACH CurrentSheet IN SheetNames
    Excel.SetActiveWorksheet.ActivateWorksheetByName Instance: ConfigExcelInstance Name: CurrentSheet
    Excel.ReadFromExcel.ReadAllCells Instance: ConfigExcelInstance ReadAsText: False FirstLineIsHeader: True RangeValue=> ExcelData
    LOOP FOREACH CurrentItem IN ExcelData
        SET TempKey TO CurrentItem[0]
        SET TempValue TO CurrentItem[1]
        SET Config[TempKey] TO TempValue
    END
END
Excel.CloseExcel.Close Instance: ConfigExcelInstance
# Read data and blast Email
SET PathSubscriberDB TO Config['SubscriberData']
Excel.LaunchExcel.LaunchAndOpenUnderExistingProcess Path: PathSubscriberDB Visible: False ReadOnly: False Instance=> SubsDBExcelInstance
Excel.InsertColumn Instance: SubsDBExcelInstance Column: $'''A'''
Excel.WriteToExcel.WriteCell Instance: SubsDBExcelInstance Value: $'''Status''' Column: $'''A''' Row: 1
Excel.ReadFromExcel.ReadAllCells Instance: SubsDBExcelInstance ReadAsText: False FirstLineIsHeader: True RangeValue=> SubsExcelData
Excel.CloseExcel.Close Instance: SubsDBExcelInstance
SET RowCounter TO 0
LOOP FOREACH CurrentSub IN SubsExcelData
    SET SubName TO $'''%CurrentSub['First Name']% %CurrentSub['Last Name']%'''
    File.ReadTextFromFile.ReadText File: Config['HTMLEmail'] Encoding: File.TextFileEncoding.UTF8 Content=> FileContents
    Text.Replace Text: FileContents TextToFind: $'''<SubName>''' IsRegEx: False IgnoreCase: False ReplaceWith: SubName ActivateEscapeSequences: False Result=> Replaced
    Email.SendEmail.AuthenticateAndSend SMTPServer: $'''smtp.gmail.com''' Port: 465 EnableSSL: True Username: $'''rpaelinaaziera@gmail.com''' Password: P'' AcceptUntrustedCertificates: False SendFrom: $'''PAD_rpaelina@gmail.com''' SendTo: CurrentSub['Email'] Subject: $'''UC001 - Hello ''' Body: Replaced IsBodyHtml: True
    ON ERROR
        SET StatusEmail TO $'''Fail'''
    END
    IF StatusEmail = $'''Fail''' THEN
        Variables.ModifyDataTableItem DataTable: SubsExcelData ColumnNameOrIndex: 0 RowIndex: RowCounter Value: $'''Failed'''
    ELSE
        Variables.ModifyDataTableItem DataTable: SubsExcelData ColumnNameOrIndex: 0 RowIndex: RowCounter Value: $'''PASS'''
    END
    Variables.IncreaseVariable Value: RowCounter IncrementValue: 1
END
Excel.LaunchExcel.LaunchUnderExistingProcess Visible: False Instance=> OutputExcelInstance
Variables.AddRowToDataTable.InsertItemToDataTable DataTable: SubsExcelData RowIndex: 0 RowToAdd: SubsExcelData.Columns
Excel.WriteToExcel.Write Instance: OutputExcelInstance Value: SubsExcelData
Excel.CloseExcel.CloseAndSaveAs Instance: OutputExcelInstance DocumentFormat: Excel.ExcelFormat.OpenXmlWorkbook DocumentPath: $'''C:\\Users\\Ideapad Gaming\\Documents\\UC001 - BlastMarketingEmail\\003_Output.xlsx'''
